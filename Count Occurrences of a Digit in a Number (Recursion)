public class Recursionbasics {
    public static int countOccurrences(int n, int x) {
        if (n == 0) {
            return 0;
        }

        int count = (n % 10 == x) ? 1 : 0;
        return count + countOccurrences(n / 10, x);
    }

    public static void main(String[] args) {
        int n = 12425322;
        int x = 2;

        System.out.println("Occurrences of " + x + ": " + countOccurrences(n, x));
    }
}
