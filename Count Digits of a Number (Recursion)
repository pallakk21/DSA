public class Recursionbasics {
    public static int countDigits(int n) {
        if (n == 0) {
            return 0;
        }
        return 1 + countDigits(n / 10);
    }

    public static void main(String[] args) {
        int n = 56478;
        System.out.println("no. of digits : " + countDigits(n));
    }
}
